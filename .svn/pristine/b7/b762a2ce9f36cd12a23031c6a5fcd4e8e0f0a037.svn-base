//!
//!  \file geometric_shape.test
//!
//!  Tests for the GeometricRegion classs 
//!
#include <imageplus/core/coord.hpp>
#include <imageplus/core/geometric_region.hpp>

BOOST_AUTO_TEST_SUITE ( suite_geometric_region );

using namespace imageplus;

typedef Coord<int64,2> C2D;
    
BOOST_AUTO_TEST_CASE ( test_geometric_region )
{
    // Default Constructor 
    GeometricRegion<C2D> gregion;
    BOOST_CHECK(gregion.size()   == 0);
    
    gregion.push_back(C2D(1,2));
    gregion.push_back(C2D(2,3));
    gregion.push_back(C2D(4,5));
    gregion.push_back(C2D(6,7));
    
    BOOST_CHECK(gregion.size()   == 4);
   
    // Copy constructor
    GeometricRegion<C2D> cp(gregion);
    BOOST_CHECK(cp.size()   == 4);
    BOOST_CHECK(cp[0] == C2D(1,2));
    BOOST_CHECK(cp[1] == C2D(2,3));
    BOOST_CHECK(cp[2] == C2D(4,5));
    BOOST_CHECK(cp[3] == C2D(6,7));
}

BOOST_AUTO_TEST_SUITE_END ();
