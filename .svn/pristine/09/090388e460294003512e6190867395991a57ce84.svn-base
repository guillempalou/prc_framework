#define BOOST_TEST_MODULE ContextCheck

#include <boost/test/unit_test.hpp>
#include <boost/test/test_case_template.hpp>

#include <boost/mpl/list.hpp>

typedef boost::mpl::list<int,long> CotextTypes;

template <typename T>
struct TestFixture {
	
	TestFixture() : i(10) {}
	~TestFixture() {}

	T i;
};

BOOST_AUTO_TEST_SUITE ( Context )

BOOST_AUTO_TEST_CASE_TEMPLATE( test, T, CotextTypes )
{
	TestFixture<T> t;
	
	BOOST_CHECK_EQUAL( t.i, T(10) );
}

BOOST_AUTO_TEST_SUITE_END ()
