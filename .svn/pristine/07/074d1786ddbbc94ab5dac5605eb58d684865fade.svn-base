//!
//!  \file binomial.hpp
//!
//!  \brief Interface for derivative routines
//!

#ifndef IMAGEPLUS_MATH_NUMERIC_BINOMIAL_HPP
#define IMAGEPLUS_MATH_NUMERIC_BINOMIAL_HPP


#include <imageplus/core.hpp>


namespace imageplus
{
    namespace math
    {
        namespace numeric
        {
            //!
            //! \brief Computes binomial coefficient
            //!
            //! A <a href="http://en.wikipedia.org/wiki/Binomial_coefficient">binomial coefficient</a> 
            //! is a coefficient of any of the terms in the 
            //! expansion of the binomial power \f$(1+x)^n\f$. This function computes the 
            //! binomial coefficient \f${n \choose r}\f$ using Pascal's triangle.
            //!
            //! \param[in] n : binomial coefficient
            //! \param[in] r : binomial coefficient
            //!
            //! \return The binomial coefficient result
            //!
            //! \author Marcel Alcoverro <marcel@gps.tsc.upc.edu>
            //!
            //! \date 27-03-2008
            //! 
            
            float64 n_choose_r (int64 n, int64 r);
    
        }
    }
}

#endif // IMAGEPLUS_MATH_NUMERIC_BINOMIAL_HPP
