//!
//!  \file rotations.hpp
//!
//!  Rotation matrices representations
//!

#ifndef IMAGEPLUS_MATH_GEOMETRY_ROTATIONS_HPP_
#define IMAGEPLUS_MATH_GEOMETRY_ROTATIONS_HPP_

#include <imageplus/core.hpp> 

namespace imageplus
{
    namespace math
    {
        //!
        //! \namespace imageplus::math::geometry
        //!
        //! \brief Geometrical operations with rotation matrices
        //!
        namespace geometry
        {
            //!
            //! \brief Converts the rotation 3x3 matrix to a orthogonal axis + angle of rotation form
            //!
            //! \author Jordi Salvador <jordi@gps.tsc.upc.edu>
            //!
            //! \date 07-March-2008
            //!
            //! \param[in] m : 3x3 rotation matrix
            //! \return Returns the rotation vector equivalent to the rotation matrix
            //!
            template<typename T>
            MultiArray<T,1> rot_matrix_to_vector(const MultiArray<T,2> m);
            //!
            //! \brief Converts the orthogonal axis + angle of rotation form to a rotation 3x3 matrix
            //!
            //! \author Jordi Salvador <jordi@gps.tsc.upc.edu>
            //!
            //! \date 07-March-2008
            //!
            //! \param[in] v : 4 coefficient rotation vector
            //! \return Returns the rotation matrix equivalent to the rotation vector
            //!
            template<typename T>
            MultiArray<T,2> rot_vector_to_matrix(const MultiArray<T,1> v);
        }
    }
}

#endif /*IMAGEPLUS_MATH_GEOMETRY_ROTATIONS_HPP_*/
