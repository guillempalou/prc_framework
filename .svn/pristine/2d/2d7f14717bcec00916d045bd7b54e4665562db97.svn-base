//! 
//! \file instance.test
//!
//! Tests for Instance class
//!
#include <imageplus/semantic/instance.hpp>


BOOST_AUTO_TEST_SUITE ( Semantic_Instance_Suite );

using namespace imageplus;
using namespace imageplus::semantic;
using namespace std;

BOOST_AUTO_TEST_CASE( instance_test )
{
	list<string> spatial_decomposition;
	Instance instance("SegmentInstance12", "file:/path/to/0000001-vd.xml", 8,
						1, spatial_decomposition);
	BOOST_CHECK_EQUAL(instance.get_media_uri(), "file:/path/to/0000001-vd.xml");
}

BOOST_AUTO_TEST_CASE( instance_test_cout )
{
	list<string> spatial_decomposition;
	Instance instance("SegmentInstance12", "file:/path/to/0000001-vd.xml", 8,
						1, spatial_decomposition);

	stringstream expected;
	expected << "(SegmentInstance12) file:/path/to/0000001-vd.xml";

	stringstream obtained;
	obtained << instance;

	BOOST_CHECK_EQUAL(obtained.str(), expected.str());
}


BOOST_AUTO_TEST_SUITE_END ();
