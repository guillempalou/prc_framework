#include <imageplus/math/geometry/homogeneous.hpp>
#include <imageplus/math/numeric/matrices.hpp>

using namespace imageplus;

MultiArray<float64,2> imageplus::math::geometry::translation_matrix (const Point3D &vec)
{
    MultiArray<float64,2> m;
    m = imageplus::math::numeric::identity_matrix<float64>(4);
    float64 *p = m.data();
    
    p[3] = vec[0];
    p[7] = vec[1];
    p[11] = vec[2];
    
    return(m);
}

MultiArray<float64,2> imageplus::math::geometry::scale_matrix (const Point3D &vec)
{
    MultiArray<float64,2> m;
    m = imageplus::math::numeric::identity_matrix<float64>(4);
    float64 *p = m.data();
    
    p[0] = vec[0];
    p[5] = vec[1];
    p[10] = vec[2];
    
    return(m);
}
