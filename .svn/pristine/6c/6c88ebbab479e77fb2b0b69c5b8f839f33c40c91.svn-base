//!
//!  \file curved_shapes.hpp
//!

#ifndef IMAGEPLUS_MATH_GEOMETRY_CURVED_SHAPES_HPP
#define IMAGEPLUS_MATH_GEOMETRY_CURVED_SHAPES_HPP

#include <imageplus/core/imageplus_types.hpp>
#include <imageplus/core/geometric_shape.hpp>


namespace imageplus
{
    namespace math
    {
        namespace geometry
        {
            //!
            //! \brief Class to create and modify circles 
            //!
            //! This class is a GeometricShape, so you can create Circles and use them to access to an Image.
            //! 
            //! \todo Add methods to change the center or the radius (changing all the coords)
            //! \todo Add tests
            //!
            //! \author 2008-05 - Albert Gil Moreno 
            //!
            template <typename T>
            class Circle : public GeometricShape<T,2>
            {
            public:
                
                /*!
                 * Default constructor
                 */
            	Circle(){}
            	
                //!
                //! \brief Basic constructor 
                //!
                //! \author Marcel Alcoverro <marcel@gps.tsc.upc.edu>
                //! \author Jose Carlos Pujol  <jpujol@tsc.uc3m.es>
                //!
                //! \date 25-03-2008
                //!
                //! \param[in] radius : radius of the circle
                //! \param[in] center : circle center
                //!
                Circle(float64 radius, Coord<T,2> center);
                
                //!
                //! \brief Constructor with bounding limits 
                //!
                //! \author Marcel Alcoverro <marcel@gps.tsc.upc.edu>
                //! \author Jose Carlos Pujol  <jpujol@tsc.uc3m.es>
                //!
                //! \date 25-03-2008
                //!
                //! \param[in] radius : radius of the circle
                //! \param[in] center : circle center
                //! \param[in] image_width :  image width will be checked to have valid coordinates
                //! \param[in] image_height : image height will be checked  to have valid coordinates
                Circle(float64 radius, Coord<T,2> center, imageplus::size_type image_width, imageplus::size_type image_height);

                /*!
                 * \returns the center of the Circle (get)
                 */
                Coord<T,2> center();

                /*!
                 * \returns the radius of the Circle (get)
                 */
                float64 radius();
                
            private:
                
                //! Center of the Circle
                Coord<T,2> _center;
                
                //! Circle's radius 
                float64 _radius;
            };
        }//namespace geometry
    }//namespace math
} //namespace imageplus

#endif // IMAGEPLUS_MATH_GEOMETRY_CURVED_SHAPES_HPP
