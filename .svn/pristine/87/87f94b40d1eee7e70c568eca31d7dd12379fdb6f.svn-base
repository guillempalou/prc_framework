/*!
 * \example hello_imavol.cpp
 *
 * This is an example of how to initialize ImaVol objects.
 * 
 * See the \ref imavol "Getting Started Guide" for more information.
 */
#include <imageplus/core.hpp>

using namespace imageplus;

void hello_imavol()
{
    /*
     * Creating ImaVol object with differents types (T), number of channels (N) and dimensions (D):
     */
    ImaVol<uint8,  3, 2> iv_A; // T=uint8,  N=3, D=2 (like a RGB image) 
    ImaVol<uint32, 1, 3> iv_B; // T=uint32, N=1, D=3 (like a gray volume)

    /*
     * Normally ImaVol is not used directly, but Image or Volume subclasses instead:
     */ 
    ImageGray<int16>   gry(3,4);
    ImageRGB <uint8>   rgb(3,4);
    Volume   <int32,1> vol(3,4,2);    

    /*
     * We can initialize any ImaVol with:
     */
    gry =  0; // all "pixels" are set to 0 
    rgb = 15; // all "pixels" are set to 15,15,15
    vol = 33; // all "voxels" are set to 33
    
    /*
     * We can print the ImaVol's contents, but it is not useful for big ImaVols...
     */ 
    std::cout << "GRY: \n" << gry << std::endl;
    std::cout << "RGB: \n" << rgb << std::endl;
    std::cout << "VOL: \n" << vol << std::endl;
}
