    #define BOOST_TEST_MODULE ImagePlusTests
#endif

#ifdef USE_BOOST_TEST_HEADERS
    #include <boost/test/included/unit_test.hpp>
#else
    #include <boost/test/unit_test.hpp>
#endif

#include <boost/test/test_case_template.hpp>
