//!
//!  \file gaussian.hpp
//!
//!  Gaussian impulse response for filters
//!

#ifndef IMAGEPLUS_FILTERS_GAUSSIAN_HPP
#define IMAGEPLUS_FILTERS_GAUSSIAN_HPP

#include <imageplus/core.hpp>

namespace imageplus
{
    namespace filters
    {
        //!
        //! \brief Gaussian mask generator
        //!
        //! \param[in] sigma : Standard deviation of the Gaussian filter
        //! \param[in] size : size of the square response's side (if < 3, it is set to 3)
        //!
        //! \return multiarray with the Gaussian response
        //!
        //! \author Jordi Salvador Marcos <jordi@gps.tsc.upc.edu>
        //!
        MultiArray<float64,2> gaussian_mask( const float64 sigma, const int64 size );

        //!
        //! \brief Gaussian mask generator for 1-D arrays
        //!
        //! \param[in] sigma : Standard deviation of the Gaussian filter
        //! \param[in] size : size of the square response's side (if < 3, it is set to 3)
        //!
        //! \return 1-D multiarray with the Gaussian response
        //!
        //! \author Carles Ventura Royo <cventura@gps.tsc.upc.edu>
        //!
        MultiArray<float64,1> gaussian_mask_1d( const float64 sigma, const int64 size );

        //!
        //! \brief Gaussian mask generator
        //!
        //! Return a Gaussian mask for convolution with a size equivalent to 2 * 3 times + 1
        //! the specified standard deviation. The minimum returned size is 3
        //!
        //! \param[in] sigma : Standard deviation of the Gaussian filter
        //!
        //! \return multiarray with the Gaussian response
        //!
        //! \author Jordi Salvador Marcos <jordi@gps.tsc.upc.edu>
        //!
        MultiArray<float64,2> gaussian_mask( const float64 sigma );

        //!
        //! \brief Gaussian mask generator for 1-D arrays
        //!
        //! Return a Gaussian mask for convolution with a size equivalent to 2 * 3 times + 1
        //! the specified standard deviation. The minimum returned size is 3
        //!
        //! \param[in] sigma : Standard deviation of the Gaussian filter
        //!
        //! \return 1-D multiarray with the Gaussian response
        //!
        //! \author Carles Ventura Royo <cventura@gps.tsc.upc.edu>
        //!
        MultiArray<float64,1> gaussian_mask_1d( const float64 sigma );
    }
}

#endif
