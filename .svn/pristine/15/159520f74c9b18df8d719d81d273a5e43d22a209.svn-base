//!
//! \author Javier Ruiz Hidalgo <j.ruiz@upc.edu>
//! \author Albert Gil Moreno <agil@tsc.upc.edu>
//!
//! Common definitions for image and sequences formats.
//!

#ifndef IMAGEPLUS_IO_TYPES_HPP
#define IMAGEPLUS_IO_TYPES_HPP

#include <imageplus/core/imageplus_types.hpp>

namespace imageplus
{
    namespace io
    {

        //! \brief magick number for mult files
        const uint16 MULT_MAGIC_NUMBER = 255;

        //! \brief default filetype for mult files
        const uint8 MULT_FILETYPE = 1;

        //!
        //! \brief Enumerate to describe the sequence input format
        //!
        enum SeqFormat
        {
            YUV444P,
            YUV420P,
            YUV400P,
            IMAGES_PRINTF,
            IMAGES_PRINTF_CH,
            FFMPEG,
            UNKNOWN_SEQ_FORMAT
        };

        //!
        //! Data types for multiarray files
        //!
        enum DataType
        {
            UINT8,INT8,UINT16,INT16,UINT32,INT32,UINT64,INT64,FLOAT32,FLOAT64,NONETYPE
        };

        //!
        //! Compression types  multiarray files
        //!
        enum CompressType
        {
           BYTE_RUNLENGTH, PARTITION_RUNLENGTH, UNKNOWN_COMPRESS_TYPE, NONE
        };

        //!
        //! WriteBitStream open modes
        //!
        enum OpenMode
        {
            NEW, APPEND
        };
        
        //!
        //! ReadWritePartition write modes
        //!
        enum PartitionWriteMode
        {
            CHECK_IMAGE_PART,
            DO_NOT_CHECK_IMAGE_PART,
            WRITE_IMAGE_PART
        };
        
        //!
        //! \brief Enumerate to describe the image input format
        //!
        enum ImageFormat
        {
            JPEG,
            PNG,
            TIFF,
            RAS,
            BMP,
            PM, // .pgm and .ppm (only for imagemagick)
            MULT,
            UNKNOWN_IMAGE_FORMAT
        };

    } // namespace io
} //namespace imageplus

#endif
