#include <imageplus/core/check_size.hpp>

#include <imageplus/core/imageyuv.hpp>

using namespace imageplus;

template<typename T>
ImageYUV<T>::ImageYUV()
        : Image<T,3>()
{
}


template<typename T>
ImageYUV<T>::ImageYUV(uint64 x, uint64 y)
        : Image<T,3>(x,y)
{
}


template<typename T>
ImageYUV<T>:: ImageYUV(const ImaVol<T,3,2>& copy)
        : Image<T,3>(copy)
{
    check_size_yuv(copy);
}


template<typename T>
ImageYUV<T>::ImageYUV(const Image<T,3>& copy)
        : Image<T,3>(copy)
{
    check_size_yuv(copy);
}


template<typename T>
ImageYUV<T>::ImageYUV(const ImageYUV<T>& copy)
        : Image<T,3>(copy)
{
#ifndef NDEBUG
    check_size_yuv(copy);
#endif
}


template<typename T>
inline ImageYUV<T>::ImageYUV(const std::vector< std::vector<uint64> >& dims)
        : Image<T,3>(dims)
{
    if ( (dims[0][0] != dims[1][0]) || (dims[0][1] != dims[1][1]) )
    {
        throw ImagePlusError("U channel dimensions must be equal to Y channel dimensions");
    }

    if ( (dims[0][0] != dims[2][0]) || (dims[0][1] != dims[2][1]) )
    {
        throw ImagePlusError("V channel dimensions must be equal to Y channel dimensions");
    }
}

template<typename T>
ImageYUV<T>::~ImageYUV()
{
}


template<typename T>
ImageYUV<T>& ImageYUV<T>::operator=( const ImaVol<T,3,2>& copy )
{
    check_size_yuv(copy);

    (*this).Image<T,3>::operator=( copy );

    return *this;
}


template<typename T>
ImageYUV<T>& ImageYUV<T>::operator=( const Image<T,3>& copy )
{
    check_size_yuv(copy);

    (*this).Image<T,3>::operator=( copy );

    return *this;
}


template<typename T>
ImageYUV<T>& ImageYUV<T>::operator=( const ImageYUV<T>& copy )
{
#ifndef NDEBUG
    check_size_yuv(copy);
#endif

    (*this).Image<T,3>::operator=( copy );

    return *this;
}


template<typename T>
const T& ImageYUV<T>::operator=(const T& val)
{
    (*this).Image<T,3>::operator=( val );

    return val;
}

// ImageYUV instantiations
namespace imageplus
{
    template class ImageYUV<uint8>;
    template class ImageYUV<uint16>;
    template class ImageYUV<int16>;
    template class ImageYUV<int64>;
    template class ImageYUV<float64>;

}
