#include <imageplus/core/check_size.hpp>

#include <imageplus/core/imageruv.hpp>

using namespace imageplus;


template<typename T>
ImageRUV<T>::ImageRUV()
        : Image<T,3>()
{
}


template<typename T>
ImageRUV<T>::ImageRUV(uint64 x, uint64 y)
        : Image<T,3>(x,y)
{
}


template<typename T>
ImageRUV<T>::ImageRUV(const ImaVol<T,3,2>& copy)
        : Image<T,3>(copy)
{
    check_size_ruv(copy);
}


template<typename T>
ImageRUV<T>::ImageRUV(const Image<T,3>& copy)
        : Image<T,3>(copy)
{
    check_size_ruv(copy);
}


template<typename T>
ImageRUV<T>::ImageRUV(const ImageRUV<T>& copy)
        : Image<T,3>(copy)
{
#ifndef NDEBUG
    check_size_ruv(copy);
#endif
}


template<typename T>
ImageRUV<T>::ImageRUV(const std::vector< std::vector<uint64> >& dims)
        : Image<T,3>(dims)
{
    if ( (dims[0][0] != dims[1][0]) || (dims[0][1] != dims[1][1]) )
    {
        throw ImagePlusError("U channel dimensions must be equal to Y channel dimensions");
    }

    if ( (dims[0][0] != dims[2][0]) || (dims[0][1] != dims[2][1]) )
    {
        throw ImagePlusError("V channel dimensions must be equal to Y channel dimensions");
    }
}


template<typename T>
ImageRUV<T>::~ImageRUV()
{
}


template<typename T>
ImageRUV<T>& ImageRUV<T>::operator=( const ImaVol<T,3,2>& copy )
{
    check_size_ruv(copy);

    (*this).Image<T,3>::operator=( copy );

    return *this;
}


template<typename T>
ImageRUV<T>& ImageRUV<T>::operator=( const Image<T,3>& copy )
{
    check_size_ruv(copy);

    (*this).Image<T,3>::operator=( copy );

    return *this;
}


template<typename T>
ImageRUV<T>& ImageRUV<T>::operator=( const ImageRUV<T>& copy )
{
#ifndef NDEBUG
    check_size_ruv(copy);
#endif

    (*this).Image<T,3>::operator=( copy );

    return *this;
}


template<typename T>
const T& ImageRUV<T>::operator=(const T& val)
{
    (*this).Image<T,3>::operator=( val );

    return val;
}



// ImageRUV instantiations
namespace imageplus
{
    template class ImageRUV<uint8>;
    template class ImageRUV<uint16>;
    template class ImageRUV<uint32>;
    template class ImageRUV<uint64>;
    template class ImageRUV<int8>;
    template class ImageRUV<int16>;
    template class ImageRUV<int32>;
    template class ImageRUV<int64>;
    template class ImageRUV<float64>;
}
