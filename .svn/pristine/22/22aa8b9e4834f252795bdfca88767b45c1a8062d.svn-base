#include <imageplus/core/check_size.hpp>

#include <imageplus/core/imageriq.hpp>

using namespace imageplus;


template<typename T>
ImageRIQ<T>::ImageRIQ()
        : Image<T,3>()
{
}


template<typename T>
ImageRIQ<T>::ImageRIQ(uint64 x, uint64 y)
        : Image<T,3>(x,y)
{
}


template<typename T>
ImageRIQ<T>::ImageRIQ(const ImaVol<T,3,2>& copy)
        : Image<T,3>(copy)
{
    check_size_riq(copy);
}


template<typename T>
ImageRIQ<T>::ImageRIQ(const Image<T,3>& copy)
        : Image<T,3>(copy)
{
    check_size_riq(copy);
}


template<typename T>
ImageRIQ<T>::ImageRIQ(const ImageRIQ<T>& copy)
        : Image<T,3>(copy)
{
#ifndef NDEBUG
    check_size_riq(copy);
#endif
}


template<typename T>
ImageRIQ<T>::ImageRIQ(const std::vector< std::vector<uint64> >& dims)
        : Image<T,3>(dims)
{
    if ( (dims[0][0] != dims[1][0]) || (dims[0][1] != dims[1][1]) )
    {
        throw ImagePlusError("U channel dimensions must be equal to Y channel dimensions");
    }

    if ( (dims[0][0] != dims[2][0]) || (dims[0][1] != dims[2][1]) )
    {
        throw ImagePlusError("V channel dimensions must be equal to Y channel dimensions");
    }
}


template<typename T>
ImageRIQ<T>::~ImageRIQ()
{
}


template<typename T>
ImageRIQ<T>& ImageRIQ<T>::operator=( const ImaVol<T,3,2>& copy )
{
    check_size_riq(copy);

    (*this).Image<T,3>::operator=( copy );

    return *this;
}


template<typename T>
ImageRIQ<T>& ImageRIQ<T>::operator=( const Image<T,3>& copy )
{
    check_size_riq(copy);

    (*this).Image<T,3>::operator=( copy );

    return *this;
}


template<typename T>
ImageRIQ<T>& ImageRIQ<T>::operator=( const ImageRIQ<T>& copy )
{
#ifndef NDEBUG
    check_size_riq(copy);
#endif

    (*this).Image<T,3>::operator=( copy );

    return *this;
}


template<typename T>
const T& ImageRIQ<T>::operator=(const T& val)
{
    (*this).Image<T,3>::operator=( val );

    return val;
}



